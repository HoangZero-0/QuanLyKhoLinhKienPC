@model IEnumerable<QuanLyKhoLinhKienPC.Models.VaiTro>

@{
    ViewData["Title"] = "Quản lý Vai trò";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-user-shield"></i> Danh sách Vai trò</h2>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-solid fa-plus"></i> Thêm mới
            </a>
            <a asp-action="Trash" class="btn btn-outline-danger me-2">
                <i class="fa-solid fa-trash-can"></i> Thùng rác
            </a>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Nhập tên vai trò để tìm kiếm..." value="@ViewData["CurrentFilter"]">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fa-solid fa-magnifying-glass"></i> Tìm</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenVaiTro)
                        </th>
                        <th class="text-center" style="width: 200px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <strong>@Html.DisplayFor(modelItem => item.TenVaiTro)</strong>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.MaVaiTro" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaVaiTro" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaVaiTro" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-4">
                                Không tìm thấy dữ liệu nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>