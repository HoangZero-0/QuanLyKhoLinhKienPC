@model QuanLyKhoLinhKienPC.Models.VaiTro

@{
    ViewData["Title"] = "Xóa Vai trò";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-triangle-exclamation"></i> Xác nhận xóa</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title text-danger mb-4">Bạn có chắc muốn xóa vai trò này?</h5>

                    <div class="alert alert-warning d-inline-block text-start">
                        <strong>Lưu ý:</strong> Dữ liệu sẽ được ẩn đi nhưng không bị mất vĩnh viễn.<br>
                        Bạn có thể khôi phục lại trong mục <strong>Thùng rác</strong>.
                    </div>

                    <dl class="row mt-3 text-start justify-content-center">
                        <dt class="col-sm-5 text-end">Tên vai trò:</dt>
                        <dd class="col-sm-5 fw-bold">@Html.DisplayFor(model => model.TenVaiTro)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="MaVaiTro" />
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fa-solid fa-xmark"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Đồng ý xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>