@model IEnumerable<QuanLyKhoLinhKienPC.Models.NhaCungCap>

@{
    ViewData["Title"] = "Quản lý Nhà cung cấp";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-truck"></i> Danh sách Nhà cung cấp</h2>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-solid fa-plus"></i> Thêm mới
            </a>
            <a asp-action="Trash" class="btn btn-outline-danger me-2">
                <i class="fa-solid fa-trash-can"></i> Thùng rác
            </a>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên nhà cung cấp hoặc số điện thoại..." value="@ViewData["CurrentFilter"]">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fa-solid fa-magnifying-glass"></i> Tìm</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.TenNhaCungCap)</th>
                        <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
                        <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                        <th class="text-center" style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle fw-bold text-primary">
                                    @Html.DisplayFor(modelItem => item.TenNhaCungCap)
                                </td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(item.SoDienThoai))
                                    {
                                        <i class="fa-solid fa-phone text-muted me-1"></i> 
                                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                                    }
                                    else
                                    {
                                        <span class="text-muted">---</span>
                                    }
                                </td>
                                <td class="align-middle text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.MaNhaCungCap" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaNhaCungCap" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaNhaCungCap" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                Không tìm thấy dữ liệu nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>