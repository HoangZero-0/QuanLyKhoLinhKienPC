@model QuanLyKhoLinhKienPC.Models.NhaCungCap

@{
    ViewData["Title"] = "Chi tiết Nhà cung cấp";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-circle-info"></i> Chi Tiết Nhà Cung Cấp</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Tên NCC:</dt>
                        <dd class="col-sm-8 fw-bold text-primary">@Html.DisplayFor(model => model.TenNhaCungCap)</dd>

                        <dt class="col-sm-4 text-muted">SĐT:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.SoDienThoai))
                            {
                                <span>@Html.DisplayFor(model => model.SoDienThoai)</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">--- Chưa cập nhật ---</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Địa chỉ:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DiaChi))
                            {
                                <span>@Html.DisplayFor(model => model.DiaChi)</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">--- Chưa cập nhật ---</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsDeleted)
                            {
                                <span class="badge bg-danger">Đã xóa</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.MaNhaCungCap" class="btn btn-warning">
                        <i class="fa-solid fa-pen"></i> Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>