@model IEnumerable<QuanLyKhoLinhKienPC.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="d-flex flex-column h-100">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-shrink-0">
        <h2 class="text-primary m-0"><i class="fa-solid fa-list"></i> Danh sách Danh mục</h2>
        <div>
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fa-solid fa-plus"></i> Thêm mới
            </a>
            <a asp-action="Trash" class="btn btn-outline-danger shadow-sm ms-2">
                <i class="fa-solid fa-trash-can"></i> Thùng rác
            </a>
        </div>
    </div>

    <div class="card mb-3 shadow-sm flex-shrink-0 border-0">
        <div class="card-body py-2">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Nhập tên danh mục để tìm kiếm..." value="@ViewData["CurrentFilter"]">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm flex-grow-1 overflow-hidden border-0">
        <div class="card-body p-0 position-relative">
            <div class="table-responsive" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;">
                <table class="table table-striped table-hover mb-0 w-100">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3 ps-3" style="position: sticky; top: 0; z-index: 10;">
                                Tên danh mục
                            </th>
                            <th class="text-center py-3" style="width: 200px; position: sticky; top: 0; z-index: 10;">
                                Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle fw-bold text-primary ps-3">
                                        @Html.DisplayFor(modelItem => item.TenDanhMuc)
                                    </td>
                                    <td class="text-center py-2">
                                        <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-warning" title="Sửa"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-info text-white" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-danger" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-5">
                                    <i class="fa-solid fa-list fa-3x mb-3 text-secondary opacity-50"></i><br>
                                    Không tìm thấy dữ liệu nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>