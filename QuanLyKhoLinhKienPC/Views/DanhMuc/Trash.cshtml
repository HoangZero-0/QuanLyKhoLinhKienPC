@model IEnumerable<QuanLyKhoLinhKienPC.Models.DanhMuc>

@{
    ViewData["Title"] = "Thùng rác Danh mục";
}

<div class="d-flex flex-column h-100">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-shrink-0">
        <h2 class="text-danger m-0"><i class="fa-solid fa-trash-can"></i> Thùng Rác Danh Mục</h2>
        <div>
            @if (Model != null && Model.Any())
            {
                <form asp-action="EmptyTrash" method="post" class="d-inline" onsubmit="return confirm('CẢNH BÁO NGUY HIỂM:\n\nBạn có chắc chắn muốn XÓA VĨNH VIỄN toàn bộ danh mục trong thùng rác không?\nHành động này KHÔNG THỂ khôi phục lại!');">
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="fa-solid fa-fire"></i> Dọn sạch thùng rác
                    </button>
                </form>
            }
            <a asp-action="Index" class="btn btn-secondary shadow-sm me-2">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="flex-shrink-0">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="fa-solid fa-circle-xmark"></i> <strong>Thất bại:</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i> <strong>Lưu ý:</strong> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="fa-solid fa-check-circle"></i> <strong>Thành công:</strong> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="card mb-3 shadow-sm flex-shrink-0 border-0">
        <div class="card-body py-2">
            <form asp-action="Trash" method="get" class="row g-2 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm tên danh mục..." value="@ViewData["CurrentFilter"]">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-danger w-100 fw-bold">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm flex-grow-1 overflow-hidden border-0">
        <div class="card-body p-0 position-relative">
            <div class="table-responsive" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;">
                <table class="table table-striped table-hover mb-0 w-100">
                    <thead class="table-danger">
                        <tr>
                            <th class="py-3 ps-3" style="position: sticky; top: 0; z-index: 10;">
                                Tên danh mục
                            </th>
                            <th class="text-center py-3" style="width: 200px; position: sticky; top: 0; z-index: 10;">
                                Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle fw-bold ps-3">@Html.DisplayFor(modelItem => item.TenDanhMuc)</td>
                                    <td class="text-center py-2">
                                        <form asp-action="Restore" asp-route-id="@item.MaDanhMuc" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success" title="Khôi phục">
                                                <i class="fa-solid fa-rotate-left"></i>
                                            </button>
                                        </form>

                                        <form asp-action="DeleteForce" asp-route-id="@item.MaDanhMuc" method="post" class="d-inline" onsubmit="return confirm('CẢNH BÁO: Xóa vĩnh viễn không thể lấy lại. Bạn chắc chứ?');">
                                            <button type="submit" class="btn btn-sm btn-dark" title="Xóa vĩnh viễn">
                                                <i class="fa-solid fa-ban"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-5">
                                    <i class="fa-regular fa-trash-can fa-3x mb-3 text-secondary opacity-50"></i><br>
                                    Thùng rác trống.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>