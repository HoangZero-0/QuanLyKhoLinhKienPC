@model QuanLyKhoLinhKienPC.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa Danh mục";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fa-solid fa-pen-to-square"></i> Cập Nhật Danh Mục</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                        <input type="hidden" asp-for="MaDanhMuc" />
                        <input type="hidden" asp-for="IsDeleted" />

                        <div class="mb-3">
                            <label asp-for="TenDanhMuc" class="form-label fw-bold">Tên danh mục <span class="text-danger">*</span></label>
                            <input asp-for="TenDanhMuc" class="form-control" />
                            <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fa-solid fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}